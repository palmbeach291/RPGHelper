<Window x:Class="RPGInitiativeHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPGInitiativeHelper"
        mc:Ignorable="d"
        Title="RPGInitiativeHelper" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menüleiste -->
            <RowDefinition Height="*"/>
            <!-- Liste und Infos -->
            <RowDefinition Height="Auto"/>
            <!-- Eingabe-Button -->
            <RowDefinition Height="Auto"/>
            <!-- Infos aus Labels -->
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <!-- Kampf-Gruppe -->
            <MenuItem Header="Kampf">
                <MenuItem Header="Neuer Kampf"/>
                <MenuItem Header="Restart Kampf"/>
                <MenuItem Header="Kampf Speichern"/>
            </MenuItem>

            <!-- Gruppen-Gruppe -->
            <MenuItem Header="Gruppen">
                <MenuItem Header="Neue Gruppe"/>
                <MenuItem Header="Lade Gruppe"/>
                <MenuItem Header="Gruppe Speichern"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Listen-Spalte -->
                <ColumnDefinition Width="*"/>
                <!-- Infos-Spalte -->
            </Grid.ColumnDefinitions>

            <!-- Definieren Sie hier Ihre Liste und Infos -->
        </Grid>

        <Grid Grid.Row="2" Grid.ColumnSpan="2"  HorizontalAlignment="Center" VerticalAlignment="Center">
        </Grid>

        <Grid x:Name="lRunde" Grid.Row="3"  HorizontalAlignment="left" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Width="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Label Grid.Column="0" HorizontalAlignment="Left">Runde:</Label>
            <Label Grid.Column="1" HorizontalAlignment="Left">1</Label>
            <Label Grid.Column="2" HorizontalAlignment="Left">Phase:</Label>
            <Label Grid.Column="3" HorizontalAlignment="Left">1</Label>
        </Grid>
    </Grid>

</Window>
