<Window x:Class="RPGInitiativeHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPGInitiativeHelper"
        mc:Ignorable="d"
        Title="RPGInitiativeHelper" Height="550" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <!-- Menüleiste -->
            <RowDefinition Height="Auto"/>
            <!-- Liste und Infos -->
            <RowDefinition Height="*"/>
            <!-- Eingabe-Button -->
            <RowDefinition Height="Auto"/>
            <!-- Infos aus Labels -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menüleiste -->
        <Menu Grid.Row="0">
            <!-- Kampf-Gruppe -->
            <MenuItem Header="Kampf">
                <MenuItem Header="Neuer Kampf" Click="NeueDatei_Click"/>
                <MenuItem Header="Restart Kampf"/>
                <MenuItem Header="Kampf Speichern"/>
            </MenuItem>

            <!-- Gruppen-Gruppe -->
            <MenuItem Header="Gruppen">
                <MenuItem Header="Neue Gruppe"/>
                <MenuItem Header="Lade Gruppe"/>
                <MenuItem Header="Gruppe Speichern"/>
            </MenuItem>
        </Menu>

        <!-- Main Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Fighter Area -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="+" Click="AddNewFighter_Click" Width="25" Height="25" Margin="5,5,5,5"/>
                    <!-- Button zum Entfernen -->
                    <Button Grid.Column="1" Content="-" Click="RemoveFighter_Click" Width="25" Height="25" Margin="5,5,5,5"/>
                </Grid>

                <ListView x:Name="fighterListView" Grid.Row="1" ItemsSource="{Binding Combatants}" SelectionMode="Single">
                    <!-- Hier definieren Sie das Aussehen Ihrer Listenelemente -->
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <!-- Definieren Sie hier, wie jedes Element in der Liste angezeigt werden soll -->
                            <TextBlock Text="{Binding Display}" Background="{Binding Color}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!--Detail Area-->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Margin="10,10,0,0">Name</Label>
                <TextBox x:Name="TB_Name" Grid.Row="1" Width="Auto" Margin="10,0,10,10" LostFocus="TB_Name_LostFocus" HorizontalAlignment="Left" />
                <Label Grid.Row="2" Margin="10,10,0,0">Initiative</Label>
                <TextBox x:Name="TB_Initiative" Grid.Row="3" Width="Auto" Margin="10,0,10,10" HorizontalAlignment="Left" RenderTransformOrigin="0,0.5" LostFocus="TB_Initiative_LostFocus"/>
                <Label Grid.Row="4" Margin="10,10,0,0">Leben</Label>
                <Grid Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TB_Current_Life" Grid.Column="0" Margin="10,5,0,10" HorizontalAlignment="Left" RenderTransformOrigin="0,0.5" LostFocus="TB_Current_Life_LostFocus"/>
                    <Label Grid.Column="1" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="20">/</Label>
                    <TextBox x:Name="TB_Max_Life" Grid.Column="2" Margin="0,5,0,10"  HorizontalAlignment="Left" RenderTransformOrigin="0,0.5" LostFocus="TB_Max_Life_LostFocus"/>
                </Grid>
                <Grid Grid.Row="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="+1LeP" Click="HealOneLife_Click" Width="40" Height="25" Margin="10,5,5,5"/>
                    <Button Grid.Column="1" Content="-1LeP" Click="GetOneDamage_Click" Width="40" Height="25" Margin="10,5,5,5"/>
                </Grid>

                <TextBox x:Name="TB_Notes" Grid.Row="7" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RenderTransformOrigin="0,0.5" LostFocus="TB_Notes_LostFocus" TextWrapping="Wrap"/>


            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="B_LastPhase" Grid.Column="0" Content="&#x2190;" Click="LastPhase_Click" Width="25" Height="25" Margin="5,5,5,5"/>
                <Button x:Name="B_StartFight" Grid.Column="1" Content="Start" Click="StartFight_Click" Width="35" Height="25" Margin="5,5,5,5"/>
                <Button x:Name="B_NextPhase" Grid.Column="2" Content="&#x2192;" Click="NextPhase_Click" Width="25" Height="25" Margin="5,5,5,5"/>
            </Grid>
        </Grid>

        <!-- Infos aus Labels -->
        <Grid x:Name="lRunde" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" HorizontalAlignment="Left">Runde:</Label>
            <Label x:Name="LTurnCounter" Grid.Column="1" HorizontalAlignment="Left">1</Label>
            <Label Grid.Column="2" HorizontalAlignment="Left">Initiative Phase:</Label>
            <Label x:Name="LPhaseCounter" Grid.Column="3" HorizontalAlignment="Left">1</Label>
            <Label Grid.Column="4" HorizontalAlignment="Left">Aktueller Kämpfer:</Label>
            <Label x:Name="LCurrentFighter" Grid.Column="5" HorizontalAlignment="Left">1</Label>
        </Grid>
    </Grid>
</Window>
